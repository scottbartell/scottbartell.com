<%= Pygments.css %>

$mono: 'Inconsolata', Monaco, Courier, monospace;
$code-border-color: #efefef;

.highlight {
  font-family: $mono;
  font-size: .65em;
  border: 1px solid $code-border-color;
  border-left: 3ex solid $code-border-color;
  position: relative;
  margin: 1em 0;

  pre {
    counter-reset: linenumbers;
    margin: 0;
    overflow: auto;
    padding: 0 0.5em;

    & > span {
      display: block;
      padding: 0.25ex;

      &:before {
        font-size: .9em;
        color: #aaa;
        content: counter(linenumbers);
        counter-increment: linenumbers;
        left: -3.2ex;
        position: absolute;
        text-align: right;
        width: 2.5ex;

        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
      }
    }
  }
}